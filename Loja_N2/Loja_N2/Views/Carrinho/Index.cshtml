@{

}

@section Style{
    <link href="~/css/HeaderFunc.css?v=@Guid.NewGuid().ToString()" rel="stylesheet" type="text/css" />
    <link href="~/css/conteudoFunc.css?v=@Guid.NewGuid().ToString()" rel="stylesheet" type="text/css" />
    <link href="~/css/homeItems.css?v=@Guid.NewGuid().ToString()" rel="stylesheet" type="text/css" />
}

<body class="fundoTela">
    <header>
        <nav>
            <a href="/Carrinho/Index"><img class="logo" src="~/images/LOGO-HALF-STACKED-WHITE.png" /></a>
            <div class="mobile-menu">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
            <ul class="nav-list">
                <li><a href="/Carrinho/Index">Produtos</a></li>
                <li><a href="/Login/LogOff">Log Out</a></li>
                <li><a href="/Carrinho/Visualizar">Carrinho</a></li>
            </ul>
        </nav>
    </header>
    <div class="container divConteudo">
        @if (Model != null)
        {
            <!--<form asp-action="AdicionarCarrinho">-->
            <div class="row">
                <div class="card-group">
                    @foreach (ItemViewModel a in Model)
                    {

                        <div class="col-lg-4">
                            <div class="card m-b-30">
                                <img class='mx-auto img-thumbnail'
                                     src="data:image /jpeg;base64,@a.ImagemEmBase64" />
                                <div class="card-body text-center mx-auto">
                                    <h5 class="card-title font-weight-bold">@a.Category_Name @a.Item_Name</h5>
                                    <p class="card-text">R$ @a.Price.ToString("0.00")</p>
                                    <a href="/Carrinho/Detalhes/?id=@a.Id" class="btn details px-auto">Detalhes</a><br />
                                    <!--<input type="submit" class="btn cart px-auto" value="ADICIONAR AO CARRINHO" />-->
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!--</form>-->
        }
    </div>

    <footer>
        <div class="container">
        </div>
    </footer>

    <script src="~/js/ConsultaItem.js"></script>
</body>
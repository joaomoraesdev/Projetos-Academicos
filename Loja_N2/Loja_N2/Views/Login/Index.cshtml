@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
}

<body class="TelaGeral">
    <div class="LoginCard">
        <div class="row">
            <div class="col-sm-10">
                <h2 id="textoLogin" class="text-center">Login</h2>
                <div class="card">
                    <div class="card-body">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="switch" onclick="switchClienteFunc()">
                            <label id="lblClienteFunc" class="custom-control-label" for="switch">Cliente</label>
                        </div>
                        <br />
                        <h5 class="card-title">Login com e-mail</h5>
                        <br />
                        <div id="clientCard">
                            <form action="/login/Fazlogin" method="post">
                                <div class="form-group">
                                    <input type="text" name="Email" class="form-control" required placeholder='Seu e-mail' "      />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Client_Password" class="form-control" required placeholder='Sua senha' />
                                </div>
                                <span class="text-danger"> @ViewBag.Erro</span>
                                <br />
                                <input type="submit" value="Login" class="btn btn-primary botaoLogin" />
                                <br />
                                <br />
                                <a id="linkCadastro" href="/Login/CreateClient">Sou novo por aqui!</a>
                            </form>
                        </div>
                        <div id="funcCard">
                            <form action="/login/FazLoginFunc" method="post">
                                <div class="form-group">
                                    <input type="text" name="Cpf" class="form-control" placeholder='Seu cpf' required />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Staff_Password" class="form-control" placeholder='Sua senha' required />
                                </div>
                                <span class="text-danger"> @ViewBag.Erro</span>
                                <br />
                                <input type="submit" value="Login" class="btn btn-primary botaoLogin" />
                                <br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="FundoMaquiagem"></div>
        <img id="logoLogin" src="~/images/LOGO-LONG-STACKED (2).png" />
    </div>
</body>
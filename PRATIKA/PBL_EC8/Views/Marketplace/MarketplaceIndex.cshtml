@model UsuarioDto;

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="../css/marketplace.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="../js/marketplace.js"></script>
    <title>Anúncios</title>
</head>

<body data-page="marketplace">
    <div class="sidebar-container">
        @await Html.PartialAsync("_MenuLateral")
    </div>
    <header class="header-container">
        <div class="search-container">
            <input type="text" id="textboxPesquisaAnuncios" class="search-box" placeholder="Pesquise um item" />
            <button type="submit" onclick="marketplace().pesquisarItens();">
                <i class="fa fa-search search-icon"></i>
            </button>
            <button type="submit" class="btnLimparPesquisa" onclick="comunidade().limparSearchbar();">Limpar</button>
        </div>
    </header>
    <main>
        <div>
            <div id="divItens" class="grid-container">
                <div class="item">
                    <div class="divImagemItem">
                        <img id="imgItem" src="../img/foto_halter.png" alt="Imagem do item" />
                    </div>
                    <br>
                    <label class="lblTitulo">Halter 5kg Roxo com revestimento de borracha</label>
                    <br>
                    <label class="lblValor">R$100,00</label>
                    <br>
                    <label>Quantidade Disponível: 10</label>
                    <br>
                    <label class="lblContato">Contato: teste@hotmail.com</label>
                    <br>
                    <label class="lblMetodoPagamento">Método Pagamento: PIX Cartão</label>
                    <br>
                    <br>
                    <label class="lblDescricao">
                        adnasldnasldnasldnasdlsandlasndl
                        adlkasndklasndlkasndlkasndlkasndklasn
                        andklasndlasndaslkdnasldnasldknas
                        alsdnaskldnaslkdnaslkdnaskldnaskldn
                        sdjaskdnaskdaskdsanbd
                        asodasdnaskdjnaskdjasndkjasndkjn
                    </label>
                    <br>
                    <br>
                    <label class="lblUsuario">Anunciante: joyboy1309</label>
                </div>
            </div>

            @Html.Partial("_ValidacaoJwt")

            @Html.Partial("_CadastroItem")
        </div>
    </main>
</body>

</html>
